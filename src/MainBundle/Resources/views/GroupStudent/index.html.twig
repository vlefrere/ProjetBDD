{% extends 'MainBundle::layout.html.twig' %}

{% block body -%}
    <h1>Liste des groupes</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Etudiants</th>
                <th>Cours</th>
                <th><a href="{{ path('group_create') }}" class="pull-right btn btn-success">Cr√©er un nouveau groupe</a> </th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('group_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.students|length }}</td>
                <td>{{ entity.courses|length }}</td>
                <td>
                    <div class="pull-right">
                        <a href="{{ path('group_show', {'id': entity.id}) }}" class="btn btn-default">Details</a>
                        <a href="{{ path('group_update', {'id': entity.id}) }}" class="btn btn-info">Modifier</a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% endblock %}
