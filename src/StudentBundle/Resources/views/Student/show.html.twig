{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Student</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Matricule</th>
                <td>{{ entity.matricule }}</td>
            </tr>
            <tr>
                <th>Birthdate</th>
                <td>{{ entity.birthdate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Sex</th>
                <td>{{ entity.sex }}</td>
            </tr>
            <tr>
                <th>Registerdate</th>
                <td>{{ entity.registerDate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ entity.address }}</td>
            </tr>
            <tr>
                <th>Zipcode</th>
                <td>{{ entity.zipCode }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ entity.city }}</td>
            </tr>
            <tr>
                <th>Previousschool</th>
                <td>{{ entity.previousSchool }}</td>
            </tr>
            <tr>
                <th>Photofilename</th>
                <td>{{ entity.photoFilename }}</td>
            </tr>
            <tr>
                <th>Hometelephone</th>
                <td>{{ entity.homeTelephone }}</td>
            </tr>
            <tr>
                <th>Mobilenumber</th>
                <td>{{ entity.mobileNumber }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('student') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('student_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
