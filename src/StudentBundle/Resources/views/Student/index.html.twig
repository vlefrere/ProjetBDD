{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Student list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Matricule</th>
                <th>Birthdate</th>
                <th>Sex</th>
                <th>Registerdate</th>
                <th>Address</th>
                <th>Zipcode</th>
                <th>City</th>
                <th>Previousschool</th>
                <th>Photofilename</th>
                <th>Hometelephone</th>
                <th>Mobilenumber</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('student_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.matricule }}</td>
                <td>{% if entity.birthdate %}{{ entity.birthdate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.sex }}</td>
                <td>{% if entity.registerDate %}{{ entity.registerDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.address }}</td>
                <td>{{ entity.zipCode }}</td>
                <td>{{ entity.city }}</td>
                <td>{{ entity.previousSchool }}</td>
                <td>{{ entity.photoFilename }}</td>
                <td>{{ entity.homeTelephone }}</td>
                <td>{{ entity.mobileNumber }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('student_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('student_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('student_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
